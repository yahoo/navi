<div
  role="button"
  class="favorite-item {{if this.isFavorite "favorite-item--active"}}"
  {{on "click" @onToggle}}
  ...attributes
>
  <DenaliIcon
    @size="small"
    @icon={{if this.isFavorite "star-solid" "star"}}
    ...attributes
  />
  <EmberTooltip @text="Favorite" @popperContainer="body" @effect="none" />
</div>
