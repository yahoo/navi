{{#if @isCollapsed}}
  {{#if this.date}}
    {{moment-format this.date this.calendarTriggerFormat}}
  {{else}}
    <FilterValues::InvalidValue/>
  {{/if}}
{{else}}
  <div class="filter-values--date-input" ...attributes>
    <DropdownDatePicker
      @dateTimePeriod={{this.calendarDateTimePeriod}}
      @date={{this.date}}
      @onUpdate={{this.setDate}}
      class="filter-values--date-input__trigger"
    >
      {{#if this.date}}
        {{moment-format this.date this.calendarTriggerFormat}}
      {{else}}
        <span class="date__placeholder">Select date</span>
      {{/if}}
    </DropdownDatePicker>
  </div>
{{/if}}