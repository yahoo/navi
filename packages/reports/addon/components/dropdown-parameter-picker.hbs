<PowerSelect
  @options={{this.options}}
  @onOpen={{this.fetchParameterOptions}}
  @selected={{this.selectedParameter}}
  @onChange={{fn this.updateSelected}}
  @triggerComponent="dropdown-parameter-trigger"
  @dropdownClass="dropdown-parameter-picker__dropdown"
  class="dropdown-parameter-picker"
  as |parameter|
>
  {{parameter}}
</PowerSelect>
