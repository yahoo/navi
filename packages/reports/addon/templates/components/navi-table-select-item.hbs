<div
  class="navi-table-select-item"
  ...attributes
>
  {{option.longName}}
  {{#if option.description}}
    <NaviIcon @icon="question-circle-o" class="navi-table-select-item__info-icon">
      <EmberTooltip
        @text={{option.description}}
        @side="right"
        @popperContainer="body"
        @effect="none"
        @tooltipClass="navi-table-select-tooltip"
      >
        {{#if item.extended.isPending}}
          <NaviLoadingMessage />
        {{else}}
          {{or item.extended.content.description "No description available"}}
        {{/if}}
      </EmberTooltip>
    </NaviIcon>
  {{/if}}
</div>