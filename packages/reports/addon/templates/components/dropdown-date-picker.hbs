<BasicDropdown as |dd|>
  <dd.trigger class="dropdown-date-picker__trigger">
    {{yield}}
  </dd.trigger>

  <dd.content class="dropdown-date-picker__dropdown">
    <NaviDatePicker
      @date={{@date}}
      @dateTimePeriod={{@dateTimePeriod}}
      @onUpdate={{pipe (action @onUpdate) (action dd.actions.close)}}
    />
  </dd.content>
</BasicDropdown>