{{#if this.column.fragment.metric.hasParameters}}
  <div class="navi-column-config-base__option navi-column-config-metric__parameter">
    <label for="{{this.classId}}-columnParameter" class="navi-column-config-metric__parameter-label navi-column-config-base__option-label">Metric Parameter</label>
    <PowerSelect 
      @triggerClass="navi-column-config-metric__parameter-trigger navi-column-config-base__option-input"
      @triggerId="{{this.classId}}-columnParameter" 
      @dropdownClass="navi-column-config-metric__parameter-dropdown"
      @selected={{this.currentParameter}}
      @searchPlaceholder="Type to search"
      @options={{this.allParameters}}
      @onchange={{this.updateMetricParam}}
      as | param |
    >
      {{param.description}} ({{param.id}})
    </PowerSelect>
  </div>
{{/if}}
