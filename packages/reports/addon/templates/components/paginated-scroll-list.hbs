<div class="{{this._containerClass}} {{if this.trim "trimmed" "show-all"}}">
  <ul class={{this._collectionClass}}>
    {{#each this._itemsToRender as |item idx|}}
      <li class="item">{{yield item idx}}</li>
    {{/each}}
  </ul>
</div>
{{#if this._isTrimmed}}
  <button type="button" class="paginated-scroll-list__show-more" {{on "click" (action "onShowMore")}}>{{this.moreLabel}}</button>
{{/if}}
