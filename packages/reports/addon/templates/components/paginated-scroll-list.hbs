<div class="{{_containerClass}} {{if trim "trimmed" "show-all"}}">
  <ul class={{_collectionClass}}>
    {{#each _itemsToRender as |item idx|}}
      <li class="item">{{yield item idx}}</li>
    {{/each}}
  </ul>
</div>
{{#if _isTrimmed}}
  <a tabindex="-1" onclick={{action "onShowMore"}}>{{moreLabel}}</a>
{{/if}}
