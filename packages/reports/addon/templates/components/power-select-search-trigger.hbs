{{!-- Remove template-lint-disable once we upgrade power select --}}
{{!-- template-lint-disable no-action no-implicit-this --}}
{{#if hasFocus}}
  <input type="search" class="ember-power-select-search-trigger {{elementId}}-input"
    tabindex="0" autocomplete="new-password" autocorrect="off" autocapitalize="off" spellcheck="false"
    placeholder={{placeholder}}
    oninput={{action "handleInput"}}
    onkeydown={{action "handleKeydown"}}
  >
{{else}}
  <span class="ember-power-select-selected-item">{{yield selected lastSearchedText}}</span>
{{/if}}
