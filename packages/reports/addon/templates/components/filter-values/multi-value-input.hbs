{{#if @isCollapsed}}
  {{#if @filter.validations.isInvalid}}
    <FilterValues::InvalidValue/>
  {{else}}
    {{#each @filter.values as |value|}}
      <span class="filter-values--collapsed--value">{{value}}</span>
    {{/each}}
  {{/if}}
{{else}}
  {{#navi-tag-input
    tags=(readonly @filter.values)
    addTag=(action "addValue")
    classNames="filter-values--multi-value-input"
    classNameBindings="filter.validations.isInvalid:filter-values--multi-value-input--error"
    placeholder=(concat @filter.subject.longName " Values")
    removeTagAtIndex=(action "removeValueAtIndex")
    allowSpacesInTags=true
    splitOnPaste=true
    as |tag|
  }}
    {{tag}}
  {{/navi-tag-input}}
{{/if}}
