{{#if this.isCollapsed}}
  {{#if this.filter.validations.attrs.values.isInvalid}}
    <FilterValues::InvalidValue/>
  {{else}}
    {{concat this.filter.values.firstObject " and " this.filter.values.lastObject}}
  {{/if}}
{{else}}
  <Input
    @value={{readonly this.filter.values.firstObject}}
    @placeholder={{this.lowPlaceholder}}
    class="filter-values--range-input__input {{if this.filter.validations.attrs.values.isInvalid "filter-values--range-input__input--error"}}"
    @key-up={{action "setLowValue"}}
  />

  <span class="filter-values--range-input__separator">and</span>

  <Input
    @value={{readonly this.filter.values.lastObject}}
    @placeholder={{this.highPlaceholder}}
    class="filter-values--range-input__input {{if this.filter.validations.attrs.values.isInvalid "filter-values--range-input__input--error"}}"
    @key-up={{action "setHighValue"}}
  />
{{/if}}