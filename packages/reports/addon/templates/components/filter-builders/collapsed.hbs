<span class="filter-dimension--collapsed">{{@displayName}}</span>
{{#if @field}}
  <span class="filter-field--collapsed">({{@field}})</span>
{{/if}}
<span class="filter-operator--collapsed">{{lowercase @filter.operator.name}}</span>
<strong>
  {{#let (component @filter.operator.valuesComponent) as |FilterValue|}}
    <FilterValue
      class="filter-values--collapsed"
      @tagName="span"
      @filter={{@filter}}
      @request={{@request}}
      @isCollapsed={{true}}
    />
  {{/let}}
</strong>
