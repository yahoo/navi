<span class="filter-dimension--collapsed">{{this.displayName}}</span>
{{#if this.field}}
  <span class="filter-field--collapsed">({{this.field}})</span>
{{/if}}
<span class="filter-operator--collapsed">{{lowercase this.filter.operator.longName}}</span>
<strong>
  {{component
    this.filter.operator.valuesComponent
    tagName="span"
    class="filter-values--collapsed"
    filter=this.filter
    request=this.request
    isCollapsed=true
  }}
</strong>
