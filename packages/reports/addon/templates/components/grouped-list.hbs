{{#each-in groupedItems as | group items |}}
  <details class="grouped-list__group" open={{shouldOpenAllGroups}}>
    <summary class="fa grouped-list__group-header">
      <span class="grouped-list__group-header-content">{{group}} ({{items.length}})</span>
    </summary>
    <ul>
      {{#each items as |item|}}
        <li class="grouped-list__item">
          {{yield item}}
        </li>
      {{/each}}
    </ul>
  </details>
{{/each-in}}
