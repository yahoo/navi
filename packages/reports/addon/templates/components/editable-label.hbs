<div class="editable-label" ...attributes>
  {{#if this.isEditingValue}}
    <Input
      @classNames="editable-label__input"
      @value={{this._localValue}}
      @size={{this._inputSize}}
      @maxlength={{150}}
      @enter={{fn this.blurLabelInput}}
      @focus-out={{fn this.editComplete}}
      {{did-insert this.setupInputElement}}
    />
  {{else}}
    <span
      class="clickable editable-label__value"
      role="button"
      {{on "click" (pipe this.resetValue (toggle "isEditingValue" this) this.highlightLabelInput)}}
    >
      {{this.value}}
      <span>
        <NaviIcon @icon="pencil" class="editable-label__icon" />
        <EmberTooltip @text="Rename" @popperContainer="body" @effect="none" />
      </span>
    </span>
  {{/if}}
</div>