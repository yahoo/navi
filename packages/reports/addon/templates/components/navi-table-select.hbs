<PowerSelect
  @classNames="navi-table-select__dropdown"
  @dropdownClass="navi-table-select__dropdown-list"
  @options={{@options}}
  @selected={{@selected}}
  @searchEnabled={{searchEnabled}}
  @tagName={{@tagName}}
  @onchange={{@onChange}}
  @selectedItemComponent="navi-table-select-trigger"
  as | item |
>
  <NaviTableSelectItem @option={{item}} />
</PowerSelect>
