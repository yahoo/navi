{{yield}}
{{#navi-modal
    isShown=showModal
}}
    <div class='navi-modal-header'>
        <h1 class='primary-header'>Save</h1>
        <h5 class='secondary-header'>Please provide a name for this report</h5>
    </div>
    {{#if (eq mode 'input')}}
        {{input value=reportName class='text-input' autofocus='autofocus' maxlength=charLimit enter='onEnter'}}
        <div class='char-count'>{{charsLeft}} characters left</div>
    {{else}}
        {{#loading-message}}
            Saving Report
        {{/loading-message}}
    {{/if}}
    <div class='btn-container'>
        <button class='btn btn-primary' {{action 'save'}} disabled={{disableSave}}>Save</button>
        <button class='btn btn-secondary' {{action 'cancel'}} disabled={{disableCancel}}>Cancel</button>
    </div>
{{/navi-modal}}
