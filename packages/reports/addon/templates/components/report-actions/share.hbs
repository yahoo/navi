{{yield}}
{{#navi-modal
    isShown=showModal
}}
    <div class='share-report-modal-container'>
        <div class='navi-modal-header'>
            <h1 class='primary-header'>Share "{{reportName}}"</h1>
        </div>
        <div class="modal-notification {{modalNotificationType.id}} {{modalNotificationType.classNames}}">
            <div class="notification-text ">{{modalNotificationType.text}}</div>
            {{#if modalNotificationType.isRemovable}}
                {{navi-icon 'times-circle-o' class='notification-remove-icon' click=(action 'closeModalNotification')}}
            {{/if}}
        </div>
        <input class='modal-input-box copy-modal' value={{reportUrl}} readonly>
        <div class='btn-container'>
            {{#copy-button
                class='btn btn-primary'
                clipboardText=reportUrl
                success='copyURLSuccess'
                error='copyURLFailure'
            }}
                Copy Link
            {{/copy-button}}
            <button class='btn btn-secondary' {{action 'cancel'}}>Cancel</button>
        </div>
    </div>
{{/navi-modal}}
