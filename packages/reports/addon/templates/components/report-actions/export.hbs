<DenaliButton
  class="export__action-btn"
  type="button"
  ...attributes
  {{on "click" (queue
        (fn this.onSuccess)
        (toggle "showModal" this)
      )}}
  disabled={{@disabled}}
>
  {{yield}}
</DenaliButton>

<DenaliModal
  class="export__modal"
  @isOpen={{this.showModal}}
  @onClose={{queue (toggle "showModal" this)}}
  as | modal |
  >
  <modal.Content>
  <h3 class="m-b-30">Exporting url</h3>
  {{#if (await this.href)}}
    <DenaliInput
      @wrapperClass="w-full"
      class="export__api-input m-b-30"
      value={{await this.href}}
      readonly={{true}}
    />
    <a class="get-api__run-btn button is-ghost m-r-10" href={{await this.href}} target={{this.target}} download={{this.download}}>Download</a>
  {{else}}
  <DenaliProgress
    @size="default"
    @isLoading={{is-pending this.href}}
    @color="default"
    @shade="500"
    @value={{100}}
  />
  {{/if}}
  </modal.Content>
</DenaliModal>