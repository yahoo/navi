<button
  type="button"
  disabled={{@disabled}}
  {{on "click" (toggle "showModal" this)}}
  class="export__action-btn"
  ...attributes
>
  {{yield}}
</button>


<DenaliModal
  class="export__modal"
  @isOpen={{this.showModal}}
  @onClose={{queue (toggle "showModal" this)}}
  as | modal |
>
<modal.Content>
  <h3 class="m-b-30">Export url</h3>
{{#if (await this.href)}}
    <DenaliInput
      @wrapperClass="w-full"
      class="export__api-input m-b-30"
      value={{await this.href}}
      readonly={{true}}
    />
    <a class="get-api__run-btn button is-ghost m-r-10" href={{await this.href}} target={{this.target}} download={{this.download}}>Download</a>
{{else}}
  <DenaliLoader/>{{await this.href}}
{{/if}}
  </modal.Content>
</DenaliModal>
