<span class='report-view__visualization-toggle'>
    {{#each validVisualizations as |visualization|}}
        <span
            class="report-view__visualization-option {{if (eq report.visualization.type visualization.name) 'report-view__visualization-option--is-active'}}"
            onclick={{route-action 'onVisualizationTypeUpdate' visualization.name}}
        >
            {{navi-icon visualization.icon class='report-view__icon'}}
            {{visualization.niceName}}
        </span>
   {{/each}}
</span>
