<div style="display:flex;flex-flow: row wrap;">
    {{navi-visualizations/metric-label
        model=model
        options=(hash
            description='Hit Points (HP)'
            metric='hp'
        )
    }}
    {{navi-visualizations/metric-label
        model=model
        options=(hash
            description='Magic Points (MP)'
            metric='magic'
        )
    }}
    {{navi-visualizations/metric-label
        model=model
        options=(hash
            description='Rupees'
            metric='rupees'
            format='$0,0[.]00'
        )
    }}
    {{navi-visualizations/metric-label
        model=model
        options=(hash
            description='Arrows'
            metric='arrows'
            format='$0,0[.]00'
        )
    }}
    {{visualization-config/wrapper
        request=request
        response=response
        visualization=metricVisualization
        onUpdateConfig=(action 'onUpdateConfig')
    }}
    {{navi-visualizations/metric-label
        model=model
        options=metricLabelOptions
    }}
</div>
