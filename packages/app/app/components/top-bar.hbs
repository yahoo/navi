<div class="top-bar" ...attributes>
  <div class="top-bar__left">
    <LinkTo @route="landing">
      <img class="top-bar__graph-logo" src="{{this.rootURL}}img/navi-graph.svg" alt="Navi, an indispensible guide to exploring your data.">
      <span class="top-bar__logo-title">navi</span>
    </LinkTo>
  </div>
  <div class="top-bar__right">
    <NaviIcon class="top-bar__user-icon" @icon="user" />
    <span class="top-bar__user">{{this.loggedInUser}}</span>
  </div>
</div>
