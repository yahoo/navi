<button type="button" class="success-btn" {{on "click" this.addSuccess}}>
  success
</button>

<button type="button" class="info-btn" {{on "click" this.addInfo}}>
  info
</button>

<button type="button" class="danger-btn" {{on "click" this.addDanger}}>
  danger
</button>

<button type="button" class="clear-btn" {{on "click" this.clear}}>
  clear
</button>

{{#each this.flashMessages.queue as |flash|}}
  <FlashMessage @flash={{flash}} />
{{/each}}