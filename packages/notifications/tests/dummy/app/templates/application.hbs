{{page-title "Navi Notifications Demo"}}

<body class="p-20">
  <h1 class="m-b-30">Navi Notifications Demo</h1>
  <DenaliInputGroup @label="Notifications" class="m-b-30">
    {{#each this.styleOptions as |style|}}
      <DenaliButton class="{{style}}-btn m-r-4" @style="ghost" {{on "click" (fn this.add style)}}>{{style}}</DenaliButton>
    {{/each}}
    <DenaliButton class="clear-btn"   @style="text"  {{on "click" this.clear}}>clear</DenaliButton>
  </DenaliInputGroup>

  <DenaliInputGroup @label="Timeout">
    <DenaliToggle
      @onChange={{fn (mut this.timeout)}}
      @activeOption={{this.timeout}}
      @options={{this.timeoutOptions}}
      as |opt|
    >
      <span data-timeout={{opt}}>{{opt}}</span>
    </DenaliToggle>
  </DenaliInputGroup>

  <NaviNotifications class="m-t-20"/>
</body>