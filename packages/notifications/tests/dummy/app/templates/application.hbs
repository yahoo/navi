<button type="button" class="success-btn" onclick={{action "addSuccess"}}>
  success
</button>

<button type="button" class="info-btn" onclick={{action "addInfo"}}>
  info
</button>

<button type="button" class="danger-btn" onclick={{action "addDanger"}}>
  danger
</button>

<button type="button" class="clear-btn" onclick={{action "clear"}}>
  clear
</button>

{{#each flashMessages.queue as |flash|}}
  <FlashMessage @flash={{flash}} />
{{/each}}