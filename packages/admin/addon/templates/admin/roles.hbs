<div class="navi-roles-dashboard">
  <h2 class="navi-roles-dashboard__heading">Manage Users</h2>
  <div class="navi-roles-dashboard__tools">
    <DenaliButton @icon="user-add" @style="solid" @iconOnly={{true}}
      {{on "click" (fn (mut this.isAddUserModalOpen) true)}} class="navi-roles-dashboard__tools-add-user" />
    <DenaliModal class="denali-modal navi-roles-dashboard__create" @isOpen={{this.isAddUserModalOpen}}
      @onClose={{fn (mut this.isAddUserModalOpen) false}} as | modal |>
      <modal.Header>
        <DenaliIcon @icon="pencil-solid" @size="small" class="navi-roles-dashboard__create-header-icon" />
        <h3 class="navi-roles-dashboard__create-header">Create User</h3>
      </modal.Header>
      <modal.Content>
        <DenaliInputGroup @label="User Id" class="navi-roles-dashboard__create-filter-group" as |Group|>
          <Group.Input type="text" placeholder="User Id" />
        </DenaliInputGroup>
        <DenaliInputGroup @label="Email" class="navi-roles-dashboard__create-filter-group" as |Group|>
          <Group.Input type="text" placeholder="user@verizonmedia.com" />
        </DenaliInputGroup>
        <DenaliInputGroup @label="Roles" class="navi-roles-dashboard__create-filter-group" as |Group|>
          <Group.Input type="text" placeholder="Roles" />
        </DenaliInputGroup>
      </modal.Content>
      <modal.Footer>
        <DenaliButton @style="solid" class="navi-roles-dashboard__create-button" {{on "click" (fn this.addUser)}}>Save
        </DenaliButton>
        <DenaliButton @style="outline" class="navi-roles-dashboard__create-button"
          {{on "click" (fn (mut this.isAddUserModalOpen) false)}}>Cancel</DenaliButton>
      </modal.Footer>
    </DenaliModal>
    <DenaliInput type="text" placeholder="Search" @iconBack="true"
      @iconBackClass="d-search is-brand-300 navi-roles-dashboard__tools-user-search" />
    <div class="navi-roles-dashboard__tools--spacer" />
    <DenaliChip @textColor="brand" class="navi-roles-dashboard__tools-chip">{{this.userCount}}</DenaliChip>
    <h6 class="upper is-grey-600 navi-roles-dashboard__tools-user-label">TOTAL USERS</h6>
  </div>
</div>
