<div class="title pie-chart-tooltip__title">
  {{this.requiredToolTipData.name}}
  ({{if this.requiredToolTipData.ratio (format-number this.requiredToolTipData.ratio style="percent") "--"}})
</div>
<ol class="pie-chart-tooltip__series">
  <li class="pie-chart-tooltip__metric-val">
    <svg class="pie-chart-tooltip__series-indicator">
      <circle cx="50%" cy="50%" r="40%" class="chart-series-{{this.requiredToolTipData.seriesIndex}}" />
    </svg>
    <span>{{tooltip-value-formatter this.requiredToolTipData.value this.metric this.rowData}}</span>
  </li>
</ol>
