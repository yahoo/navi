<div class="title">{{format-chart-tooltip-date this.request this.x}}</div>
<ol class="hover-metrics">
  {{#each this.tooltipData as |series index|}}
    <li class="metric-val">
      <svg class="series-indicator">
        <circle cx="50%" cy="50%" r="40%" class="chart-series-{{series.seriesIndex}}"/>
      </svg>
      <span>{{tooltip-value-formatter series.value (get "displayName" (object-at index this.request.metricColumns)) (object-at series.seriesIndex this.rowData)}}</span>
    </li>
  {{/each}}
</ol>
