<div class="title">{{format-chart-tooltip-date this.request this.x}}</div>
{{#let (metric-format this.seriesConfig.metric this.request.dataSource) as |metricName|}}
  <div class="sub-title">{{metricName}}</div>
  <ol class="hover-dimensions">
    {{#each this.tooltipData as |series|}}
      <li class="metric-val">
        <svg class="series-indicator">
          <circle cx="50%" cy="50%" r="40%" class="chart-series-{{series.seriesIndex}}"/>
        </svg>
        <span>{{tooltip-value-formatter series.value metricName (object-at series.seriesIndex this.rowData)}}</span>
      </li>
    {{/each}}
  </ol>
{{/let}}
