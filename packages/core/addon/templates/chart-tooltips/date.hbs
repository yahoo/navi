<div class="title">{{this.request.logicalTable.timeGrain}} {{this.x}}</div>
<div class="sub-title">{{metric-format (get this.seriesConfig "metric") this.request.dataSource}}</div>
<ol class="hover-metrics">
  {{#each this.tooltipData as |series|}}
    <li class="metric-val">
      <svg class="series-indicator">
        <circle cx="50%" cy="50%" r="40%" class="chart-series-{{series.seriesIndex}}"/>
      </svg>
      <span>{{tooltip-value-formatter series.value this.seriesConfig.metric (object-at series.seriesIndex this.rowData)}}</span>
    </li>
  {{/each}}
</ol>
