<div class="number-format-selector" ...attributes>
  <div class="number-format-selector__section-header">
    Format Type
  </div>
  <DenaliRadio
      @onChanged={{queue @onUpdateFormat (fn (mut this.customFormat))}}
      as |Radio|
    >
      {{#each this.predefinedFormats as |predefinedFormat|}}
        <Radio.Option
          @name="format"
          @value={{predefinedFormat.format}}
          @checked={{eq this.customFormat predefinedFormat.format}}
        >
          {{predefinedFormat.name}}
        </Radio.Option>
      {{/each}}
      <Radio.Option
          @name="format"
          @value={{this.customFormat}}
          @checked={{true}}
        >
          Custom
        </Radio.Option>
  </DenaliRadio>
  <DenaliInputGroup @label="Format" @isStacked= {{true}} class="number-format-selector__section-header">
    <DenaliInput
      @size="medium"
      type="text"
      value={{@format}}
      placeholder="Raw Format"
      class="number-format-selector__format-input"
      {{on "input" (pipe (pick 'target.value') (fn @onUpdateFormat ) )}}
    />
  </DenaliInputGroup>
  <a class="number-format-selector__doc-link"
    href="http://numeraljs.com/#format"
    target="_blank"
    rel="noopener noreferrer"
  >
    <NaviIcon @icon="life-ring" class="number-format-selector__icon-documentation" />
    Format Documentation
  </a>
</div>