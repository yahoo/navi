{{!-- Remove template-lint-disable no-action when native class power select upgrade --}}
{{!-- template-lint-disable no-action --}}
{{#if this.searchEnabled}}
  <div class="ember-power-select-search navi-power-select-search">
    <NaviIcon @icon="search" />
    <input 
      type="search" 
      autocomplete="off" 
      autocorrect="off" 
      autocapitalize="off" 
      spellcheck="false" 
      role="combobox" 
      class="ember-power-select-search-input navi-power-select-search-input" 
      value={{this.select.searchText}} 
      aria-controls={{this.listboxId}} 
      placeholder={{this.searchPlaceholder}} 
      oninput={{this.onInput}} 
      onfocus={{this.onFocus}} 
      onblur={{this.onBlur}} 
      onkeydown={{this.onKeydown}}
    >
  </div>
{{/if}}
