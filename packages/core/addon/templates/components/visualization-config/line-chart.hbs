{{log options}}
{{#if (eq type "line-chart")}}
  <div class="line-chart-config__style-options">
    <label class="line-chart-config__curve-opt">
      Line Style
      {{#power-select 
        options=curveOptions 
        selected=(readonly options.type.curve)
        onchange=(action "onUpdateType" "curve")
        searchEnabled=false
        placeholder="line"
        as |curve|}}
        {{curve}}
      {{/power-select}}
    </label>
    <label class="line-chart-config__area-opt">
      <input 
        type="checkbox"
        checked={{readonly options.type.area}}
        onchange={{action "onUpdateType" "area"}}
      /> area
    </label>
  </div>
{{/if}}
{{component
  (concat typePrefix (readonly options.axis.y.series.type))
  request=request
  response=response
  seriesConfig=(readonly options.axis.y.series.config)
  onUpdateConfig=(action "onUpdateConfig")
  options=options
}}
