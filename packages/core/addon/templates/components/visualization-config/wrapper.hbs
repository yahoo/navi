{{#if showMetricSelect}}
  <div class="metric-select">
    <span class="metric-select__header">Metric</span>
    <div class="metric-select__select">
      {{#power-select
        options=metrics
        selected=selectedMetric
        searchEnabled=false
        onchange=(action "onUpdateChartMetric")
        dropdownClass="metric-select__select__dropdown"
        triggerClass="metric-select__select__trigger"
        class="metric-select__select__selector"
        tagName="div"
        renderInPlace=true
        as |metric|
      }}
        {{metric-format metric}}
      {{/power-select}}
    </div>
  </div>
{{/if}}
{{component
  (concat "visualization-config/" visualization.type)
  request=request
  response=response
  options=visualization.metadata
  onUpdateConfig=(action onUpdateConfig)
  type=visualization.type
  classNames="visualization-config__contents"
}}
