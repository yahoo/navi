{{#if showMetricSelect}}
  <div class="metric-select">
    <div class="metric-select__header">Metric</div>
    <div class="metric-select__select">
      {{#power-select
        options=metrics
        selected=selectedMetric
        searchEnabled=false
        onchange=(action "onUpdateChartMetric")
        dropdownClass="metric-select__select__dropdown"
        triggerClass="metric-select__select__trigger"
        class="metric-select__select__selector"
        tagName="div"
        renderInPlace=true
        as |metric|
      }}
        {{metric-format metric}}
      {{/power-select}}
    </div>
  </div>
{{/if}}
{{yield}}