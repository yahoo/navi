<div class="line-chart-config__series-config" ...attributes>
  <div class="line-chart-config__series-config__header">Stack Order</div>
  <div class="line-chart-config__series-config__content">
    <SortableGroup
      class="line-chart-config__series-config__collection"
      @onChange={{this.onReorderSeries}}
      @model={{this.seriesData}}
      as |group|
    >
      {{#each group.model as |seriesDataItem index|}}
        <group.item
          class={{concat "line-chart-config__series-config__item chart-series-" index}}
          @model={{readonly seriesDataItem}}
          as |item|
        >
          <div class="line-chart-config__series-config__item__content">
            {{if (eq @seriesType "dimension") seriesDataItem.name (metric-format seriesDataItem @request.dataSource)}}
          </div>
          <item.handle>
            <div class="line-chart-config__series-config__item__handler">
              <div></div>
              <div></div>
            </div>
          </item.handle>
        </group.item>
      {{/each}}
    </SortableGroup>
  </div>
</div>
