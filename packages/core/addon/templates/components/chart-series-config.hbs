<div class="line-chart-config__series-config__header">Stack Order</div>
<div class="line-chart-config__series-config__content">
  <SortableGroup
    class="line-chart-config__series-config__collection"
    @onChange={{action "onReorderSeries"}}
    as |group|
  >
    {{#each seriesData as |seriesDataItem index|}}
      <group.item
        class={{concat "line-chart-config__series-config__item chart-series-" index}}
        @model={{seriesDataItem}}
        @handle={{".line-chart-config__series-config__item__handler"}}
      >
        <div class="line-chart-config__series-config__item__content">
          {{if (eq seriesType "dimension") seriesDataItem.name (metric-format seriesDataItem)}}
        </div>
        <div class="line-chart-config__series-config__item__handler">
          <div></div>
          <div></div>
        </div>
      </group.item>
    {{/each}}
  </SortableGroup>
</div>