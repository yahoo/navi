<div class="series-chart-config" ...attributes>
  {{#if this.showMetricSelect}}
    <div class="metric-select">
      <div class="metric-select__header">Metric</div>
      <div class="metric-select__select">
        <PowerSelect
          class="metric-select__select__selector"
          @tagName="div"
          @options={{@request.metricColumns}}
          @selected={{this.selectedMetric}}
          @searchEnabled={{false}}
          @onchange={{this.onUpdateChartMetric}}
          @dropdownClass="metric-select__select__dropdown"
          @triggerClass="metric-select__select__trigger"
          @renderInPlace={{true}}
          as |metric|
        >
          {{metric.displayName}}
        </PowerSelect>
      </div>
    </div>
  {{/if}}
  {{yield}}
</div>