<div class="metric-label-config" ...attributes>
  <div class="metric-label-config__section-header">
    Label
  </div>
  <div class="metric-label-config__description metric-label-config__section">
    <Input
      class="metric-label-config__text-input metric-label-config__description-input"
      @name="metric-description-input"
      @type="text"
      @value={{readonly this.metricColumn.displayName}}
      @enter={{fn this.updateLabel}}
      @focus-out={{fn this.updateLabel}}
      @placeholder="No Label"
    />
  </div>
  <NumberFormatSelector @format={{@options.format}} @onUpdateFormat={{this.updateFormat}} />
</div>
