<div class="goal-gauge-config" ...attributes>

   <DenaliInputGroup @label="Label" @isStacked= {{true}} class="goal-gauge-config__section-header">
    <DenaliInput
      @size="medium"
      type="text"
      placeholder={{this.metricColumn.displayName}}
      value={{readonly this.metricColumn.alias}}
      {{on "input" (pipe (pick 'target.value') (fn this.updateLabel ) )}}
    />
  </DenaliInputGroup>
  <DenaliInputGroup @label="Baseline" @isStacked= {{true}} class="goal-gauge-config__section-header">
    <DenaliInput
      @size="medium"
      type="text"
      placeholder="Baseline Value"
      value={{readonly @options.baselineValue}}
      {{on "input" (pipe (pick 'target.value') (fn this.updateBaseline ) )}}
    />
  </DenaliInputGroup>

  <DenaliInputGroup @label="Goal" @isStacked= {{true}} class="goal-gauge-config__section-header">
    <DenaliInput
      @size="medium"
      type="text"
      placeholder="Goal Value"
      value={{readonly @options.goalValue}}
      {{on "input" (pipe (pick 'target.value') (fn this.updateGoal ) )}}
    />
  </DenaliInputGroup>
</div>
