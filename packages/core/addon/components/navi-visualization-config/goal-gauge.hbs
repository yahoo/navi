<div class="goal-gauge-config" ...attributes>

   <DenaliInputGroup 
     @label="Label" 
     @isStacked={{true}} 
     class="goal-gauge-config__section-header"
   >
    <DenaliInput
      @size="medium"
      type="text"
      class="label"
      placeholder={{this.metricColumn.displayName}}
      value={{this.metricColumn.alias}}
      {{on "input" (pipe (pick 'target.value') (fn this.updateLabel))}}
    />
  </DenaliInputGroup>

  <DenaliInputGroup 
    @label="Baseline" 
    @isStacked= {{true}} 
    class="goal-gauge-config__section-header"
  >
    <DenaliInput
      @size="medium"
      type="number"
      maxlength="22"
      class="baseline"
      placeholder="Baseline Value"
      value={{@options.baselineValue}}
      {{on "input" (pipe (pick 'target.value') (fn this.updateBaseline))}}
    />
  </DenaliInputGroup>

  <DenaliInputGroup 
    @label="Goal" 
    @isStacked= {{true}} 
    class="goal-gauge-config__section-header"
  >
    <DenaliInput
      @size="medium"
      type="number"
      maxlength="22"
      class="goal"
      placeholder="Goal Value"
      value={{@options.goalValue}}
      {{on "input" (pipe (pick 'target.value') (fn this.updateGoal))}}
    />
  </DenaliInputGroup>
</div>
