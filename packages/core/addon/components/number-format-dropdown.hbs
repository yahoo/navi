<div class="number-format-dropdown menu is-right {{if this.isActive "is-active"}} flex align-items-center" ...attributes>
  <BasicDropdown
    @horizontalPosition="right"
    @renderInPlace={{true}}
    @onClose={{queue this.updateColumnNumberFormat this.toggleIsActive}}
    @onOpen={{this.toggleIsActive}}
    as |dd|
  >
    <dd.Trigger class="number-format-dropdown__trigger">
      <DenaliIcon
        @icon="more-horizontal-circle{{if this.isActive "-solid"}}"
        @size="small"
        class="link {{if this.isActive "is-active"}} p-x-8 p-y-4"
      />
    </dd.Trigger>

    <dd.Content class="number-format-dropdown__container menu-content w-38 p-15 m-t-4">
      <NumberFormatSelector
        @format={{this.format}}
        @onUpdateFormat={{this.setFormat}}
      />
    </dd.Content>
  </BasicDropdown>
</div>