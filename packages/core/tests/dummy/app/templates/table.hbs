<div class="table-config__totals-toggle-section">
  <span class="table-config__totals-toggle-label">Edit Header</span>
  <DenaliSwitch
    class="table-config__total-toggle-button"
    @isEnabled={{readonly this.isEditing}}
    @onChange={{toggle "isEditing" this}}
  />
</div>

<div class="table-example">
  <NaviVisualizations::Table
    @model={{this.model}}
    @isEditing={{this.isEditing}}
    @options={{this.options}}
    @onUpdateReport={{this.onUpdateReport}}
  />
  <NaviVisualizationConfig::Wrapper
    @request={{this.request}}
    @response={{this.response}}
    @visualization={{this.visualization}}
    @onUpdateConfig={{this.onUpdateConfig}}
  />
</div>
