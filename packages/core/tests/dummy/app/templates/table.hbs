<div class="table-config__totals-toggle-section">
  <span class="table-config__totals-toggle-label">Edit Header</span>
  {{x-toggle
    class="table-config__total-toggle-button"
    value=(readonly isEditing)
    size="small"
    onToggle=(toggle-action "isEditing" this)
  }}
</div>

<div class="table-example">
  {{navi-visualizations/table
    model=model
    isEditing=isEditing
    options=options
    onUpdateReport=(action "onUpdateReport")
  }}
  {{visualization-config/wrapper
    request=request
    response=response
    visualization=visualization
    onUpdateConfig=(action "onUpdateConfig")
  }}
</div>
