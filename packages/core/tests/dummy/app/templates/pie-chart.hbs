<h3>Group by One dimension</h3>
<div class="chart-container pie-chart-container">
  {{visualization-config/wrapper
    request=request
    response=response
    visualization=visualizationOptions
    onUpdateConfig=(action "onUpdateConfigOneDimension")
  }}
  {{navi-visualizations/pie-chart
    model=model
    options=options
  }}
</div>

<h3>Group by Two dimensions</h3>
<div class="chart-container pie-chart-container">
  {{visualization-config/wrapper
    request=multiDimensionRequest
    response=multiDimensionResponse
    visualization=visualizationOptionsMultiDimension
    onUpdateConfig=(action "onUpdateConfigMultipleDimension")
  }}
  {{navi-visualizations/pie-chart
    model=multiDimensionModel
    options=multiDimensionOptions
  }}
</div>
