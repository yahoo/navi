{{dashboard-filter-collection
  dashboard=dashboard
  onUpdateFilter=(dashboard-action "UPDATE_FILTER")
  onRemoveFilter=(dashboard-action "REMOVE_FILTER" dashboard)
}}

{{#if addingMode}}
  <div class="dashboard-filters-collection-add-row">
    {{dashboard-dimension-selector
      dashboard=dashboard
      onChange=(dashboard-action "ADD_FILTER" dashboard)
    }}
    <div class="dashboard-filters-collection-add-row__placeholder--operator"></div>
    <div class="dashboard-filters-collection-add-row__placeholder--value"></div>
  </div>
{{else}}
  <button onclick={{action (toggle "addingMode" this)}} class="dashboard-filters-expanded__add-filter-button">
    Add Filter
  </button>
{{/if}}