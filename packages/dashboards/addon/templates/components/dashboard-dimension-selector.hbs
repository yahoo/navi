<div
  class="dashboard-dimension-selector"
  ...attributes
>
  {{#if (is-fulfilled this.groupedDimensions)}}
    <PowerSelect
      @options={{await this.groupedDimensions}}
      @onchange={{@onChange}}
      @searchField="name"
      @placeholder="Select a Dimension"
      @searchPlaceholder="Search"
      @beforeOptionsComponent="power-select-search"
      as |dimension|
    >
      <div title="data source: {{dimension.dataSource}}">{{dimension.name}}</div>
    </PowerSelect>
  {{/if}}
</div>