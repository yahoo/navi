<span class="dashboard-filters__expand-button" role="button" onclick={{action (toggle "isCollapsed" this)}}>
  {{navi-icon "sliders"}} Settings {{navi-icon (if isCollapsed "angle-right" "angle-down")}}
</span>

{{#if isCollapsed}}
  {{dashboard-filters-collapsed dashboard=dashboard tagName="span"}}
{{else}}
  {{dashboard-filters-expanded 
    dashboard=dashboard 
    onUpdateFilter=(action onUpdateFilter)
    onRemoveFilter=(action onRemoveFilter)
    onAddFilter=(action onAddFilter)
  }}
{{/if}}