<BasicDropdown @tagName="div" @matchTriggerWidth={{true}} @verticalPosition="below" @class="navi-search" ...attributes as |dd|>
  <dd.trigger class="navi-search-bar">
    <Input @type="text" @value={{this.searchQuery}} @placeholder="Search" @class="navi-search-bar__input"
      @keyUp={{fn this.onKeyUp dd}} />
    <NaviIcon @icon="search" class="navi-search-bar__icon" />
  </dd.trigger>
  {{#if this.searchResults}}
    <dd.content @class="navi-search-results navi-search-results--box navi-search-result-wrapper slide-fade">
      {{#each this.searchResults as |result|}}
        <NaviSearchResult::Wrapper @result={{result}} @closeResults={{fn this.closeResults dd}} class="navi-search-results__item navi-search-results--box"/>
      {{/each}}
    </dd.content>
  {{/if}}
</BasicDropdown>
