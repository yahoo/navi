<DirSidebar 
  class="tablet-down-hide-left {{if this.sidebarOpen "tablet-down-toggle-tabs-left"}}"
  @onRouteChanged={{fn (mut this.sidebarOpen) false}} 
/>
<main class="container p-30">
  <div class="row tablet-down-flex-column p-b-20">
    <div class="row flex-1">
      <h2 class="directory__title flex-1">{{this.title}}</h2>
      <DirTableFilter
        @selectedType={{this.type}}
        @updateQueryParams={{this.updateQueryParams}}
      />
    </div>

    <DirSearchBar
      @query={{this.q}}
      @searchFor={{this.searchFor}}
    />
  </div>
  <div class="row">
    {{outlet}}
  </div>
</main>