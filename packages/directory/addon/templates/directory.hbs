<DirSidebar/>
<main class="container p-30">
  <div class="row m-b-30 space-between">
    <h2 class="directory__title">{{this.title}}</h2>
    <div class="flex">
      <DirTableFilter
        @selectedType={{this.type}}
        @updateQueryParams={{this.updateQueryParams}}
      />
      <DirSearchBar
        @query={{this.q}}
        @searchFor={{this.searchFor}}
      />
    </div>
  </div>
  <div class="row">
    {{outlet}}
  </div>
</main>