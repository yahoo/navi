<div class="dir-search-bar" ...attributes>
  <Input
    @value={{readonly @query}}
    @type="text"
    @class="dir-search-bar__input"
    @key-up={{action @searchFor}}
    @placeholder="Search"
  />
  <NaviIcon @icon="search" class="dir-search-bar__search-icon" />
  <NaviIcon @icon="times"
      class={{concat "dir-search-bar__clear-icon" (if (not-eq @query.length 0) " dir-search-bar__clear-icon--show")}}
      {{on "click" (set this "query" "")}}
  />
</div>