<LinkTo @route={{this.itemLink}} @model={{this.itemId}} class="dir-item-name-cell">
  <DirIcon @iconClass={{this.iconClass}} />
  {{get @value "title"}}
  {{#if (get @value "isFavorite")}}
    <DirIcon @iconClass="star"/>
  {{/if}}
</LinkTo>

{{#if (get value "tempId")}}
  <span class="dir-item-name-cell__unsaved-label">Unsaved</span>
{{/if}}
