{{!-- TODO: Reenable occlusion once the feature is out of beta. It currently causes issues with custom cell components --}}
{{#light-table table
  classNames='dir-table'
  responsive=true
  occlusion=false
  estimatedRowHeight=40
  as |t|
}}
  {{t.head
    onColumnClick=(action 'onColumnClick')
    iconSortable='fa fa-sort'
    iconAscending='fa fa-sort-asc'
    iconDescending='fa fa-sort-desc'
    fixed=true
  }}

  {{#t.body
    canSelect=false
    as |body|
  }}
    {{#if isLoading}}
      {{#body.loader}}
        {{navi-loader}}
      {{/body.loader}}

    {{else}}

      {{#if table.isEmpty}}
        {{#body.no-data}}

          {{#if isSearching}}

            {{#navi-info-message}}
              <div class='dir-table__info-message--text'>
                None of your files or folders match <span class='dir-table__info-message--query'>{{searchQuery}}</span>.
              </div>
              <div class='dir-table__info-message--subtext'>Please try a different search.</div>
            {{/navi-info-message}}

          {{else}}

            {{dir-empty}}

          {{/if}}
        {{/body.no-data}}
      {{/if}}

    {{/if}}

  {{/t.body}}
{{/light-table}}