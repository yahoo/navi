<div class="dir-new-button" ...attributes>
  <BasicDropdown as |dd|>
    <dd.Trigger class="dir-new-button__trigger btn btn-primary">New</dd.Trigger>
    <dd.Content class="dir-new-button__content dropdown-arrow">
      {{#each this.fileTypeNames as |typeName|}}
        {{#with (get this.fileTypes typeName) as |typeObject|}}
          <LinkTo @route={{typeObject.linkRoute}} class="dir-new-button__dropdown-option">
            <DirIcon @iconClass={{typeObject.iconClass}} />
            <span class="dir-new-button__option-text">{{capitalize (singularize typeName) }}</span>
          </LinkTo>
        {{/with}}
      {{/each}}
    </dd.Content>
  </BasicDropdown>
</div>