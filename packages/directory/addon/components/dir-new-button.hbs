{{#each this.fileTypeNames as |typeName|}}
  {{#let (get this.fileTypes typeName) as |typeObject|}}
    <li class="m-x-20 m-t-20">
      <DenaliButton 
        @icon={{typeObject.iconClass}}
        @style="ghost" 
        {{on "click" (fn this.linkTo typeObject.linkRoute)}}
        class="dir-new-button"
      >
        New {{capitalize (singularize typeName) }}
      </DenaliButton>
    </li>
  {{/let}}
{{/each}}