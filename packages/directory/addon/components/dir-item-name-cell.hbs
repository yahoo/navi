<LinkTo @route={{this.itemLink}} @model={{this.itemId}} class="dir-item-name-cell">
  <DenaliIcon 
    class={{this.iconColorClass}}
    @icon={{this.iconClass}} 
    @size="small"
  />
  <span>{{@value.title}}</span>
</LinkTo>
{{#if @value.isFavorite}}
  <DenaliIcon 
    class="is-yellow-500"
    @icon="star-solid" 
    @size="small" 
  />
{{/if}}

{{#if @value.tempId}}
  <DenaliChip
    @size="small"
    @backgroundColor="grey"
    @backgroundShade="300"
    @textColor="grey"
    @textShade="700"
    class="dir-item-name-cell__unsaved-label"
  >
    UNSAVED
  </DenaliChip>
{{/if}}
