<LinkTo @route={{this.itemLink}} @model={{this.itemId}} class="dir-item-name-cell">
  <DenaliIcon 
    class={{this.iconColorClass}}
    @icon={{this.iconClass}} 
    @size="small"
  />
  <span>{{@value.title}}</span>
</LinkTo>
{{#if @value.isFavorite}}
  <DenaliIcon 
    class="is-yellow-500"
    @icon="star-solid" 
    @size="small" 
  />
{{/if}}

{{#if @value.tempId}}
  <span class="dir-item-name-cell__unsaved-label font-12 is-grey-600 m-l-8">Unsaved</span>
{{/if}}
