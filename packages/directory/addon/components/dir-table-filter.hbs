<div ...attributes>
  <BasicDropdown @class="dir-table-filter" as |dd|>
    <dd.trigger @class="dir-table-filter__trigger">
      <span class="dir-table-filter__trigger-type">
        {{capitalize this.selectedFileType}}
      </span>
      <NaviIcon @icon="caret-down" class="dir-table-filter__dropdown-icon"/>
    </dd.trigger>

    <dd.content @class="dir-table-filter__dropdown-options dropdown-arrow">
      {{#each this.fileTypes as | type |}}
        <div
          class={{concat "dir-table-filter__dropdown-option" (if (eq type this.selectedFileType) " dir-table-filter__dropdown-option--selected")}}
          role="button"
          {{on "click" (fn this.filterByType type)}}
          {{on "click" (fn this.close dd)}}
        >
          {{capitalize type}}
        </div>
      {{/each}}
    </dd.content>
  </BasicDropdown>
</div>