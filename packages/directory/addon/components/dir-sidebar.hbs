<DenaliSidebar 
  class="dir-sidebar"
  ...attributes
  as |Sidebar| 
>
  <DirNewButton/>
  <li class="dir-sidebar__break"><hr></li>
  {{#each this.directories as | directory |}}
    <Sidebar.LinkToTab 
      @route={{directory.routeLink}} @query={{hash filter=null}}
      data-title={{directory.name}}
      class="dir-sidebar__link"
      {{on "click" (fn (mut this.selectedDirectory) directory)}}
      {{on "click" (fn (mut this.selectedFilter) (object-at 0 directory.filters))}}
    >
      {{directory.name}}
    </Sidebar.LinkToTab>
  {{/each}}
  {{#each this.filters as | filter |}}
    <Sidebar.LinkToTab 
      @route="directory.my-data" @query={{hash filter=filter.queryParams.filter}}
      data-title={{filter.name}}
      class="dir-sidebar__link"
    >
      {{filter.name}}
    </Sidebar.LinkToTab>
  {{/each}}
</DenaliSidebar>