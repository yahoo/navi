<div class="dir-sidebar" ...attributes>
  <section class="dir-sidebar__groups">
    {{#each this.directories as | directory |}}
      <LinkTo @route={{directory.routeLink}} @query={{hash filter=null}}
        class="dir-sidebar__group"
        {{on "click" (fn (mut this.selectedDirectory) directory)}}
        {{on "click" (fn (mut this.selectedFilter) (object-at 0 directory.filters))}}
      >
        <div>
          <span class="dir-sidebar__group--icon"><NaviIcon @icon="folder-o"/></span>
          <span class="dir-sidebar__group--name">{{directory.name}}</span>
        </div>
      </LinkTo>
    {{/each}}
  </section>
  <section class="dir-sidebar__filters">
    {{#each this.filters as | filter |}}
      <LinkTo @route="directory.my-data" @query={{hash filter=filter.queryParams.filter}}
        class="dir-sidebar__filter"
      >
        <div>
          <span class="dir-sidebar__filter--icon"><NaviIcon @icon={{filter.icon}}/></span>
          <span class="dir-sidebar__filter--name">{{filter.name}}</span>
        </div>
      </LinkTo>
    {{/each}}
  </section>
</div>